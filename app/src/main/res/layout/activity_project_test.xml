<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProjectTest"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar"
        app:title="Project"
        app:titleTextColor="@color/white"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="5dp"
                    android:layout_height="2090dp"
                    android:layout_marginStart="30dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/timeline_line">
                </FrameLayout>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/timeline_shape1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/timeline_line"
                    app:layout_constraintRight_toRightOf="@id/timeline_line"
                    app:layout_constraintVertical_bias="0.015">
                </ImageView>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/timeline_shape2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/timeline_line"
                    app:layout_constraintRight_toRightOf="@id/timeline_line"
                    app:layout_constraintVertical_bias="0.216">
                </ImageView>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/timeline_shape3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/timeline_line"
                    app:layout_constraintRight_toRightOf="@id/timeline_line"
                    app:layout_constraintVertical_bias="0.418">
                </ImageView>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/timeline_shape4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/timeline_line"
                    app:layout_constraintRight_toRightOf="@id/timeline_line"
                    app:layout_constraintVertical_bias="0.619">
                </ImageView>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/timeline_shape5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/timeline_line"
                    app:layout_constraintRight_toRightOf="@id/timeline_line"
                    app:layout_constraintVertical_bias="0.819">
                </ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="21dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="330dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#DCDCDC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_margin="5dp"
                            android:text="SmartPortfolio"/>
                        <ImageView
                            android:layout_width="290dp"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/project1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="안드로이드 스튜디오를 사용해 개발한 스마트 포트폴리오 애플리케이션입니다.\n코틀린을 사용해 전체적으로 애플리케이션을 개발하였습니다."/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="프로젝트 보러가기"
                                android:textSize="15dp"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/goToUrl1"/>
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="15dp"
                                android:src="@drawable/next"
                                android:layout_marginTop="11dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#DCDCDC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_margin="5dp"
                            android:text="자리있나요?"/>
                        <ImageView
                            android:layout_width="290dp"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/project2"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="”자리있나요?” 는 한림대학교 공학관 북카페의 좌석을 실시간으로 조회할 수 있는 시스템입니다. 저는 이 프로젝트에서 웹 사이트의 Front-End를 맡아 개발하였습니다."/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="프로젝트 보러가기"
                                android:textSize="15dp"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/goToUrl2"/>
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="15dp"
                                android:src="@drawable/next"
                                android:layout_marginTop="11dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#DCDCDC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_margin="5dp"
                            android:text="Healing Blog"/>
                        <ImageView
                            android:layout_width="290dp"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/project3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="HTML, CSS, JavaScript를 이용해 개발한 웹 블로그입니다. HealingStory, CodingStory, Calendar 등을 포함해 저에게 힐링이 되는 모든것을 기록하였습니다."/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="프로젝트 보러가기"
                                android:textSize="15dp"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/goToUrl3"/>
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="15dp"
                                android:src="@drawable/next"
                                android:layout_marginTop="11dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#DCDCDC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_margin="5dp"
                            android:text="위로"/>
                        <ImageView
                            android:layout_width="290dp"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/project4"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="”위로”는 정신 건강 관리 웹 서비스 입니다. 워드프레스를 통해 웹사이트를 개발하였습니다.\n저는 이 프로젝트에서 심리검사와 마켓페이지를 맡아 개발하였습니다."/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="프로젝트 보러가기"
                                android:textSize="15dp"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/goToUrl4"/>
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="15dp"
                                android:src="@drawable/next"
                                android:layout_marginTop="11dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="#DCDCDC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_margin="5dp"
                            android:text="자동뷔페용기"/>
                        <ImageView
                            android:layout_width="290dp"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/project5"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="아두이노를 활용해 제작한 자동 뷔페 용기입니다. \n 사용자가 일정 거리 이상 다가오게 되면 자동으로 뷔페의 용기가 열리도록 제작하였습니다."/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="프로젝트 보러가기"
                                android:textSize="15dp"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/goToUrl5"/>
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="15dp"
                                android:src="@drawable/next"
                                android:layout_marginTop="11dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>